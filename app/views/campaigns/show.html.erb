							<div class="funding-meta">
								<h1><%= @campaign.name %></h1>
								<span class="type-meta"><i class="fa fa-user"></i> <%= @campaign.creator.username %></span>
								<span class="type-meta"><i class="fa fa-tag"></i> <a href="#">crowdfunding</a>, <a href="#">launch</a> </span>
								<!--img src="assets/img/image-heartbeat.jpg" class="img-responsive" alt="launch HTML5 Crowdfunding"-->
								<div class="container1 centerImage ">
									<img class='fill-vertical fill-horizontal' src="<%= @campaign.image %>" alt="John Doe"></img>
								</div>
								<p><%= @campaign.description %></p>
								<h2>$<%= @campaign.raised %></h2>
								<span class="contribution">raised by <strong><%= @campaign.backers.length%></strong> ready to launch</span>
								<div class="progress">
									<div class="progress-bar" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @campaign.percent_complete %>%;">
										<span style='width:100px'><%= @campaign.percent_complete %>% Complete</span>
									</div>
								</div>
								<span class="goal-progress"><strong><%= @campaign.percent_complete %>%</strong> of $<%= @campaign.funding_goal.round %> raised</span>
							</div>
							<span class="count-down"><strong><%= @campaign.days_left %></strong>Days to go.</span>
							<a href="/campaigns/<%= @campaign.id %>/fundings/new" class="btn btn-launch">HELP LAUNCH</a>
						</div>
						<!--tabs-->
