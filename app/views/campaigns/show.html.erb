	<header >
		<div class="container-fluid">
			<div class="row">
				<div class="goal-summary pull-left">
					<div class="backers">
						<h3><%= @campaign.backers.length %></h3>
						<span>backers</span>
					</div>
					<div class="funded">
						<h3>$<%= @campaign.raised %></h3>
						<span>raised out of <%= @campaign.funding_goal.round %></span>
					</div>
					<div class="time-left">
						<h3><%= @campaign.days_left %></h3>
						<span>days left to go</span>
					</div>
				</div>
				<% if current_user == @campaign.creator %>
				<div class="row">
					<div class="pull-right">
						<a href="/campaigns/<%= @campaign.id %>/edit">Edit Campaign</a><br>
						<!-- <a href="/campaigns/<%= @campaign.id %>/destroy">Delete Campaign</a> -->
					</div>
				</div>
				<% end %>
			</div>
