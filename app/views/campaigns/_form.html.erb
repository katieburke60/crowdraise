<div class="col-md-6 col-sm-6">
  <br></br>
  <%= form_for @campaign do |f| %>
      <label>What do you want to call your campaign?</label>
        <%= f.text_field :name %>
      <label>What are you trying to achieve? Why is what you're building awesome?</label>
        <%= f.text_area :description, size: "70x10" %><br>
      <label>When do you want your campaign to end?</label>
        <%= f.datetime_select :deadline %>
      <br>
      <label>How much money do you need to raise?</label>
        <%= f.number_field :funding_goal %>
      <label>Upload a photo that represents your campaign</label>
        <%= f.file_field :image %>
      <br>
      <%= f.submit %>
  <% end %>
</div>
