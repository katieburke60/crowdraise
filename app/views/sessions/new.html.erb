<div class="container">

    <hr>
    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <h3>Welcome back! Sign in below</h3>
        </div>
    </div>

<div class="col-md-3 col-sm-6">
<br>
<%= form_tag login_path do %>
  <div>Email <%= text_field_tag :email, nil, {class: "form-control"} %></div><br>
  <div>Password <%= password_field_tag :password, nil, {class: "form-control"} %></div><br />

  <div><%= submit_tag "Login", {class: "form-control"} %></div>
<% end %>
</div>
